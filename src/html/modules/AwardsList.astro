---
import { awards } from "~/db";
---

<section class="mt-24">
  <h2>{awards.length} Awards</h2>
  <ul class="mt-6">
    {
      awards.map(({ project, name, at, url }) => {
        return (
          <li class="border-t border-dashed border-zinc-200 last:border-b">
            <a
              href={url}
              target="_blank"
              class="grid grid-cols-12 gap-gridGap py-6"
            >
              <span class="col-start-1 col-span-2">{name}</span>
              <span class="col-start-3 col-span-2">{at}</span>
              <span class="col-start-5 col-span-2">{project}</span>
            </a>
          </li>
        );
      })
    }
  </ul>
</section>
