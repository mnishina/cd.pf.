---
import { awards } from "~/db";
---

<section class="mt-24">
  <div>{awards.length} Awards</div>
  <ul class="mt-4">
    {
      awards.map(({ project, name, at, url }) => {
        return (
          <li class="border-t border-dashed border-zinc-200 last:border-b">
            <a href={url} target="_blank" class="grid grid-cols-12 gap-8 py-6">
              <span class="col-start-1">{project}</span>
              <span class="col-start-2 col-span-full">
                {name} - {at}
              </span>
            </a>
          </li>
        );
      })
    }
  </ul>
</section>
